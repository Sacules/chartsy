behavior ToggleSettingMenu(menuId)
	on click
		if @aria-pressed is 'false'
			set <button.setting-button/>'s @aria-pressed to 'false'
			set @aria-pressed to 'true'

			set <div.setting-menu/>'s @aria-expanded to 'false'
			set menuId's @aria-expanded to 'true'
		else
			set @aria-pressed to 'false'
			set menuId's @aria-expanded to 'false'
		end
	end
end

behavior UpdateChartTitle
	on input(target)
		send update(val:target.value) to #chart-title
end

behavior ReplaceImage
	on click
	    set img to <img/> in me
		set targetSrc to img.src
		set targetId to `chart-img-${$imgIndex}`
		log "targetId", targetId
		set #{targetId}'s src to targetSrc
	    toggle between .hidden and .block on <footer/>
	    toggle between .hidden and .grid on #search-mobile
end
