{
	"name": "chartsy",
	"version": "1.0.0",
	"description": "A modern chart generator",
	"main": "index.js",
	"scripts": {
		"clean:tmp": "rm -rfv .tmp/*",
		"clean:public": "rm -rfv public/*",
		"prebuild": "run-p clean:*",
		"build": "run-p build:compile build:js build:images build:tw build:_hs",
		"build:compile": "run-s build:ts build:postcss build:esbuild",
		"build:ts": "tsc --outDir .tmp/js",
		"build:postcss": "npx postcss .tmp/js/*.js .tmp/js/**/*.js .tmp/js/**/**/*.js  --verbose --replace",
		"build:esbuild": "esbuild .tmp/js/index.js --bundle --minify --outfile=public/js/index.js",
		"build:js": "rsync -v --recursive ui/static/js public/",
		"build:tw": "tailwindcss --input ui/static/css/index.css --output public/css/index.css",
		"build:images": "rsync -v --recursive ui/static/img public/",
		"build:_hs": "rsync -v --recursive ui/static/_hs public/",
		"postbuild": "go build -v ./cmd/web"
	},
	"author": "Lucas Leonardo",
	"license": "ISC",
	"dependencies": {
		"@types/dompurify": "^3.0.2",
		"@types/marked": "^5.0.1",
		"@types/sortablejs": "^1.15.1",
		"alpinejs": "^3.12.3",
		"autoprefixer": "^10.4.14",
		"dompurify": "^3.0.5",
		"esbuild": "0.19.0",
		"html-to-image": "^1.11.11",
		"htmx.org": "^1.9.4",
		"lit": "^2.8.0",
		"marked": "^7.0.2",
		"panzoom": "^9.4.3",
		"postcss": "^8.4.27",
		"sortablejs": "github:Sacules/Sortable",
		"tailwindcss": "^3.3.3",
		"toolcool-range-slider": "^4.0.28"
	},
	"devDependencies": {
		"@tailwindcss/forms": "^0.5.4",
		"@typescript-eslint/eslint-plugin": "^6.3.0",
		"@typescript-eslint/parser": "^6.3.0",
		"eslint": "^8.46.0",
		"eslint-config-prettier": "^9.0.0",
		"npm-run-all": "^4.1.5",
		"postcss-cli": "^10.1.0",
		"postcss-lit": "^1.1.0",
		"prettier": "^3.0.1",
		"prettier-plugin-go-template": "^0.0.15",
		"ts-lit-plugin": "^1.2.1",
		"typescript": "^5.1.6"
	}
}
