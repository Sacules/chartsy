{
	"name": "chartsy",
	"version": "1.0.0",
	"description": "A modern chart generator",
	"main": "index.js",
	"scripts": {
		"clean": "rm -rf public/*",
		"reload": "echo 'finished' > .reloader",
		"predev": "run-s clean",
		"dev": "run-p ts js img",
		"postdev": "run-s reload",
		"prebuild": "run-s clean",
		"build": "run-p ts js img css",
		"css": "tailwindcss --input ui/static/css/index.css --output public/index.css",
		"ts": "esbuild ui/static/ts/index.ts --bundle --minify --outfile=public/index.js",
		"js": "rsync --recursive ui/static/js public/",
		"img": "rsync --recursive ui/static/img public/",
		"postbuild": "run-s reload"
	},
	"author": "Lucas Leonardo",
	"license": "ISC",
	"dependencies": {
		"@types/dompurify": "^3.0.2",
		"@types/marked": "^5.0.1",
		"dompurify": "^3.0.5",
		"esbuild": "0.19.3",
		"html-to-image": "^1.11.11",
		"konva": "^9.3.11",
		"marked": "^9.0.0",
		"tailwindcss": "^3.4.3"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^6.6.0",
		"@typescript-eslint/parser": "^6.6.0",
		"bun-types": "^1.0.2",
		"esbuild-plugin-tsc": "^0.4.0",
		"eslint": "^8.49.0",
		"eslint-config-prettier": "^9.0.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.0.3",
		"prettier-plugin-go-template": "^0.0.15",
		"prettier-plugin-tailwindcss": "^0.5.4",
		"typescript": "^5.2.2"
	}
}
