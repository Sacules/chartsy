{
  "name": "chartsy",
  "version": "1.0.0",
  "description": "A modern chart generator",
  "main": "index.js",
  "scripts": {
    "build": "run-p build:compile build:js build:css build:images build:_hs",
    "build:compile": "run-s build:ts build:ts-to-js",
    "build:ts": "tsc --noEmit",
    "build:ts-to-js": "esbuild ui/static/ts/index.ts --bundle --minify --outfile=public/js/index.js",
    "build:js": "rsync -v --recursive ui/static/js public/",
    "build:css": "tailwindcss --input ui/static/css/index.css --output public/css/index.css",
    "build:images": "rsync -v --recursive ui/static/img public/",
    "build:_hs": "rsync -v --recursive ui/static/_hs public/"
  },
  "author": "Lucas Leonardo",
  "license": "ISC",
  "dependencies": {
    "@types/dompurify": "^3.0.2",
    "@types/marked": "^5.0.1",
    "@types/sortablejs": "^1.15.1",
    "alpinejs": "^3.12.3",
    "autoprefixer": "^10.4.14",
    "dompurify": "^3.0.5",
    "esbuild": "0.18.15",
    "html-to-image": "^1.11.11",
    "htmx.org": "^1.9.3",
    "lit": "^2.8.0",
    "marked": "^6.0.0",
    "panzoom": "^9.4.3",
    "postcss": "^8.4.27",
    "sortablejs": "^1.15.0",
    "tailwindcss": "^3.3.3",
    "toolcool-range-slider": "^4.0.28"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.4",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^9.0.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^10.1.0",
    "postcss-lit": "^1.1.0",
    "prettier": "^3.0.0",
    "prettier-plugin-go-template": "^0.0.15",
    "ts-lit-plugin": "^1.2.1",
    "typescript": "^5.1.6"
  }
}
