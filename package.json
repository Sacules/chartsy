{
	"name": "chartsy",
	"version": "1.0.0",
	"description": "A modern chart generator",
	"main": "index.js",
	"scripts": {
		"prebuild": "rm -rf public/*",
		"build": "run-p build:ts build:js build:img build:tw build:_hs",
		"build:ts": "BUILD_ENV=prod bun build.ts",
		"build:tw": "tailwindcss --input ui/static/css/index.css --output public/index.css",
		"build:js": "rsync --recursive ui/static/js public/",
		"build:img": "rsync --recursive ui/static/img public/",
		"build:_hs": "rsync --recursive ui/static/_hs public/",
		"postbuild": "echo 'finished' > .reloader"
	},
	"author": "Lucas Leonardo",
	"license": "ISC",
	"dependencies": {
		"@types/dompurify": "^3.0.2",
		"@types/marked": "^5.0.1",
		"@types/sortablejs": "^1.15.2",
		"autoprefixer": "^10.4.15",
		"dompurify": "^3.0.5",
		"html-to-image": "^1.11.11",
		"htmx.org": "^1.9.5",
		"lit": "^2.8.0",
		"marked": "^9.0.0",
		"postcss": "^8.4.29",
		"sortablejs": "github:Sacules/Sortable",
		"tailwindcss": "^3.3.3"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^6.6.0",
		"@typescript-eslint/parser": "^6.6.0",
		"esbuild-plugin-tsc": "^0.4.0",
		"esbuild-style-plugin": "^1.6.2",
		"eslint": "^8.49.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-lit": "^1.9.1",
		"npm-run-all": "^4.1.5",
		"postcss-cli": "^10.1.0",
		"postcss-lit": "^1.1.0",
		"prettier": "^3.0.3",
		"prettier-plugin-go-template": "^0.0.15",
		"prettier-plugin-tailwindcss": "^0.5.4",
		"ts-lit-plugin": "^1.2.1",
		"typescript": "^5.2.2"
	}
}
